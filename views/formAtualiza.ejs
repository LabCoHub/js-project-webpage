<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atualizar</title>
    <link rel="shortcut icon" href="http://localhost:3000/img/icon.png" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="http://localhost:3000/css/formAtualiza.css">
    <!-- Link Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <h1>Atualização de produto</h1>
    <div class="container">
        <form id="form" action="/produtos/form/atualizar?_method=PUT" method="post" onsubmit="return validarDadosAtualiza()">

            <input type="hidden" name="id" value="<%= produto.id %>">

            <label for="nome">Nome</label>
            <input type="text" id="name" name="nome" value="<%= produto.nome %>" placeholder="Digite o nome"/>

            <label for="preco">Preço</label>
            <input type="text" id="preco" name="preco" placeholder="Digite o preço" value="<%= produto.preco %>"/>

            <label for="descricao">Descrição</label>
            <textarea cols="20" rows="10" id="descricao" name="descricao" placeholder="Digite a descrição"><%= produto.descricao %></textarea>

            <input type="submit" class="btn salvar" value="Salvar"/>
            
            <a href="/produtos" id="btn-voltar" class="btn btn-outline-primary mb-3">Voltar</a>
        </form>
    </div>
    <script type="text/javascript" src="http://localhost:3000/js/validador.js"></script>
    <script>
        document.querySelector('#form').addEventListener('submit', function (event) {
            event.preventDefault();

            if (validarDadosAtualiza()) {
                this.submit();
            }
        });


        document.getElementById('name').addEventListener('input', function () {
            if (this.value.trim() !== '') {
                this.classList.remove('campo-vazio');
            }
        });
        document.getElementById('preco').addEventListener('input', function () {
            if (this.value.trim() !== '') {
                this.classList.remove('campo-vazio');
            }
        });
        document.getElementById('descricao').addEventListener('input', function () {
            if (this.value.trim() !== '') {
                this.classList.remove('campo-vazio');
            }
        });
    </script>
</body>
</html>